<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.smarteist.autoimageslider.SliderView
        android:id="@+id/image_slider"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:sliderAnimationDuration="600"
        app:sliderAutoCycleDirection="right"
        app:sliderAutoCycleEnabled="true"
        app:sliderIndicatorAnimationDuration="600"
        app:sliderIndicatorGravity="center_horizontal|bottom"
        app:sliderIndicatorMargin="15dp"
        app:sliderIndicatorOrientation="horizontal"
        app:sliderIndicatorPadding="3dp"
        app:sliderIndicatorRadius="3dp"
        app:sliderIndicatorSelectedColor="#8D1313"
        app:sliderIndicatorUnselectedColor="@android:color/darker_gray"
        app:sliderScrollTimeInSec="2"
        app:sliderStartAutoCycle="true"></com.smarteist.autoimageslider.SliderView>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/picstar_logo_crop"
        android:layout_gravity="center">

    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find all your footage needs here"
        android:layout_gravity="center">

    </TextView>


    <Button
        android:id="@+id/button_login"
        android:layout_width="700px"
        android:layout_height="wrap_content"
        android:backgroundTint="#8D1313"
        android:textColor="#FFFFFF"
        android:layout_gravity="center"
        android:layout_marginTop="50px"
        android:text="Get Started"/>

</LinearLayout>
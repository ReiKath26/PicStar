<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_promo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/background_promo">

    </ImageView>

    <TextView
        android:id="@+id/text_promo"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Here you can try our PicStar filter "
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="50dp"
        android:layout_centerInParent="true">

    </TextView>

    <Button
    android:id="@+id/btn_subs"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Try PicStar Filter Beta"
    android:background="#8D1313"
    android:layout_centerInParent="true"
    android:textColor="@android:color/white"
    android:layout_below="@id/text_promo"
    android:layout_marginTop="20dp">

</Button>



</RelativeLayout>